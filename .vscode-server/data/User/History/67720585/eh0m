server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name stonk.stream www.stonk.stream;

    root /var/www/html;
    index index.html;

    # Allow ACME challenge responses
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # Redirect all other traffic to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}
