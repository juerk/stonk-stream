# Redirect all HTTP traffic to HTTPS
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name stonk.stream;

    # Immediately redirect everything to the exact same URI on HTTPS
    return 301 https://$host$request_uri;
}

# Serve over HTTPS
server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;
    server_name stonk.stream;

    root /var/www/html;
    index index.html;

    # SSL certs from Let's Encrypt via certbot
    ssl_certificate     /etc/letsencrypt/live/stonk.stream/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/stonk.stream/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;

    # Main page
    location / {
        try_files $uri $uri/ =404;
    }

    # HLS fragments
    location /hls {
        types {
            application/vnd.apple.mpegurl  m3u8;
            video/mp2t                    ts;
        }
        root /tmp;
        add_header Cache-Control no-cache;
        add_header Access-Control-Allow-Origin *;
    }
}
