# Redirect HTTP → HTTPS, serve ACME, and proxy viewer API
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name stonk.stream www.stonk.stream;

    # Let’s Encrypt ACME challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
        allow all;
    }

    # Proxy viewer-counter API on HTTP
    location /api/viewers {
        proxy_pass         http://127.0.0.1:3001;
        proxy_http_version 1.1;
        proxy_set_header   Host            $host;
        proxy_set_header   X-Real-IP       $remote_addr;
        proxy_set_header   Connection      "";
        proxy_buffering    off;
        proxy_read_timeout 30s;
    }
    location /api/viewers/count {
        proxy_pass         http://127.0.0.1:3001;
        proxy_http_version 1.1;
        proxy_set_header   Host            $host;
        proxy_set_header   X-Real-IP       $remote_addr;
        proxy_set_header   Connection      "";
        proxy_buffering    off;
        proxy_read_timeout 30s;
    }

    # RTMP stats endpoint
    location /stat {
        rtmp_stat all;
        # Uncomment for HTML view: rtmp_stat_stylesheet stat.xsl;
    }

    # Redirect everything else to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# Serve site, HLS, and proxy API over HTTPS
server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;
    server_name stonk.stream www.stonk.stream;

    root /var/www/html;
    index index.html;

    # SSL certificates
    ssl_certificate     /etc/letsencrypt/live/stonk.stream/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/stonk.stream/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;

    # Proxy viewer-counter API on HTTPS
    location /api/viewers {
        proxy_pass         http://127.0.0.1:3001;
        proxy_http_version 1.1;
        proxy_set_header   Host            $host;
        proxy_set_header   X-Real-IP       $remote_addr;
        proxy_set_header   Connection      "";
        proxy_buffering    off;
        proxy_read_timeout 30s;
    }
    location /api/viewers/count {
        proxy_pass         http://127.0.0.1:3001;
        proxy_http_version 1.1;
        proxy_set_header   Host            $host;
        proxy_set_header   X-Real-IP       $remote_addr;
        proxy_set_header   Connection      "";
        proxy_buffering    off;
        proxy_read_timeout 30s;
    }

    # Main site
    location / {
        try_files $uri $uri/ =404;
    }

    # HLS fragments
    location /hls {
        types { application/vnd.apple.mpegurl m3u8; video/mp2t ts; }
        root /tmp;
        add_header Cache-Control no-cache;
        add_header Access-Control-Allow-Origin *;
    }

    # RTMP stats endpoint over HTTPS
    location /stat {
        rtmp_stat all;
        # Uncomment for HTML view: rtmp_stat_stylesheet stat.xsl;
    }
}
