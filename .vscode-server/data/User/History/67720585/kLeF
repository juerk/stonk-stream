# Redirect HTTP → HTTPS
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name stonk.stream www.stonk.stream;

    # Let Let’s Encrypt do its challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
        allow all;
    }

    # Everything else goes to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# Serve your stream and site over HTTPS
server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;
    server_name stonk.stream www.stonk.stream;

    root /var/www/html;
    index index.html;

    ssl_certificate     /etc/letsencrypt/live/stonk.stream/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/stonk.stream/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;

    # Serve your HTML page
    location / {
        try_files $uri $uri/ =404;
    }

    # Serve the HLS fragments
    location /hls {
        types {
            application/vnd.apple.mpegurl m3u8;
            video/mp2t                 ts;
        }
        root /tmp;
        add_header Cache-Control no-cache;
        add_header Access-Control-Allow-Origin *;
    }
}
